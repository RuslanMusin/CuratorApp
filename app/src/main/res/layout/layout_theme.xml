<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin.large"
            android:layout_marginStart="@dimen/margin.large"
            android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/li_title"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin.normal"
                    android:layout_marginBottom="@dimen/margin.normal"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_name"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text.16" />

                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.small"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/text.14"
                        tools:text="Authors" />

            </LinearLayout>

            <include layout="@layout/layout_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/li_curator"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin.normal"
                    android:layout_marginBottom="@dimen/margin.normal"
                >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/curator"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text.16" />

                    <TextView
                        android:id="@+id/tv_curator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.small"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/text.14"
                        tools:text="Authors" />

                </LinearLayout>

                <include layout="@layout/layout_divider"/>

                <LinearLayout
                    android:id="@+id/li_student"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin.normal"
                    android:layout_marginBottom="@dimen/margin.normal"
                >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text.16" />

                    <TextView
                        android:id="@+id/tv_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.small"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/text.14"
                        tools:text="Authors" />

                </LinearLayout>

                <include layout="@layout/layout_divider"/>

                <LinearLayout
                    android:id="@+id/li_subject"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin.normal"
                    android:layout_marginBottom="@dimen/margin.normal"
                >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text.16" />

                    <TextView
                        android:id="@+id/tv_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.small"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/text.14"
                        tools:text="Authors" />

                </LinearLayout>

                <include layout="@layout/layout_divider"/>

                <LinearLayout
                        android:id="@+id/li_skills"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin.normal"
                            android:layout_marginBottom="@dimen/margin.normal"
                            android:orientation="vertical">

                        <include layout="@layout/layout_expandable"/>


                    </LinearLayout>

                    <include layout="@layout/layout_divider"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/li_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin.normal"
                    android:layout_marginBottom="@dimen/margin.normal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_desc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text.16" />

                    <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin.small"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/text.14"
                            android:text="@string/desc"
                    />

                </LinearLayout>

                <include layout="@layout/layout_divider"/>

              <!--  <ProgressBar
                    android:id="@+id/progress_loader"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin.small"
                    android:visibility="gone"
                    tools:visibility="visible"/>-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>